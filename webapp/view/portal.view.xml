<mvc:View controllerName="portaldho.controller.portal"
        xmlns:mvc="sap.ui.core.mvc"
	    xmlns="sap.m"
        xmlns:tnt="sap.tnt"
        xmlns:core="sap.ui.core"
        xmlns:layout="sap.ui.layout"
	    height="100%">
    
<tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <Button
                    id="sideNavigationToggleButton"
                    icon="sap-icon://menu2"
                    type="Transparent"
                    press=".onSideNavButtonPress" />
                <Title text="Portal DHO" />

                <ToolbarSpacer />
                
                <Avatar src="test-resources/sap/tnt/images/Woman_avatar_01.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow"/>
                    </layoutData>
                </Avatar>
                <!-- <Avatar initials="DU" displaySize="XS" press="onAvatarPressed" /> -->
                <!-- {usuarioLogado>/Nome} -->
                <Text text="Ana Clara Santos"/>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation id="sideNavigation2" selectedKey="walked" expanded="true" itemSelect=".onItemSelect">
            <tnt:NavigationList>
                <tnt:NavigationListItem visible="true" text="Dados" icon="sap-icon://account" key="DadosPessoais"/>
                <tnt:NavigationListItem visible="true" text="Dependentes" icon="sap-icon://family-protection" key="Dependentes"/>
                <tnt:NavigationListItem visible="true" text="Documentos" icon="sap-icon://documents" key="Documentos"/>
                <tnt:NavigationListItem visible="true" text="Endereço" icon="sap-icon://map" key="Endereco"/>
                <tnt:NavigationListItem visible="true" text="Formacao Pessoal" icon="sap-icon://study-leave" key="Formacao"/>
                <tnt:NavigationListItem visible="true" text="Declarações" icon="sap-icon://newspaper" key="Declaracoes"/>
                <tnt:NavigationListItem visible="true" text="Férias" icon="sap-icon://general-leave-request" >
                    <tnt:NavigationListItem text="Solicitação" key="SolicitacaoFerias" />
                    <tnt:NavigationListItem text="Aprovacão" key="AprovacaoFerias" />
                </tnt:NavigationListItem>
                <tnt:NavigationListItem visible="true" text="Solicitação de Recesso Escolar" icon="sap-icon://learning-assistant" />
                <tnt:NavigationListItem visible="true" text="Recibos" icon="sap-icon://receipt" />
                <tnt:NavigationListItem visible="true" text="Beneficios" icon="sap-icon://leads" />
            </tnt:NavigationList>
        </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <App id="navContainer" />
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
